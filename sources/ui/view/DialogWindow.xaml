<Window x:Class="FFTriadBuddy.UI.DialogWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FFTriadBuddy.UI"
             mc:Ignorable="d" Background="{StaticResource BrushWindowBackground}" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow" Height="100" Width="100">
    <Window.Resources>
        <DataTemplate DataType="{x:Type local:FavDeckEditViewModel}">
            <local:FavDeckEditDialog/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:AdjustHashViewModel}">
            <local:AdjustHashDialog/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:AdjustCardViewModel}">
            <local:AdjustCardDialog/>
        </DataTemplate>
    </Window.Resources>
</Window>
